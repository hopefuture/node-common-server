{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".gitignore",
    ".history",
    "README.md",
    "nodemon.json",
    "node_modules/*",
    "bin/*"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "server"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
